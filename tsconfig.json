{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "outDir": "dist",
    "module": "nodenext",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}